<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="漳州市天气预报"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 芗城区卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_xiangcheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_location_xiangcheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="芗城区"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- 当前天气 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_current_temp_xiangcheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25°"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_current_weather_xiangcheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="晴"
                            android:textSize="18sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_wind_xiangcheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="风向: 东南 2级"
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_humidity_xiangcheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="湿度: 65%"
                            android:textSize="14sp"
                            android:textColor="#999999" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 7天预报标题 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7天天气预报"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_xiangcheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progress_bar_xiangcheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 龙文区卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_longwen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_location_longwen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="龙文区"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- 当前天气 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_current_temp_longwen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25°"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_current_weather_longwen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="晴"
                            android:textSize="18sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_wind_longwen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="风向: 东南 2级"
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_humidity_longwen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="湿度: 65%"
                            android:textSize="14sp"
                            android:textColor="#999999" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 7天预报标题 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7天天气预报"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_longwen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progress_bar_longwen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>
